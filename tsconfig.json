{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@data/*": ["src/data/*"],
      "@sections/*": ["src/sections/*"],
      "@icons/*": ["src/icons/*"],
      "@images/*": ["src/images/*"],
      "@assets/*": ["src/assets/*"],
    }
  }
}
