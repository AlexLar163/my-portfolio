---
import LinkList from "@components/LinkList.astro";
import Typing from "@components/Typing.astro";
import WordSphere from "@components/WordSphere";
import AvatarBackground from "@images/AvatarBackground.astro";
import MyPhoto from "@images/MyPhoto.png";
import { Image } from "astro:assets";
---

<section class="flex items-center justify-center pt-52">
  <div class="w-full flex flex-col items-start">
    
    <Typing class="mt-4 text-2xl font-bold bg-gradient-to-tr from-orange-400 to-white bg-clip-text text-transparent font-sora-variant" text="&lt;Fullstack Developer /&gt;" />
    <h2 class="text-white text-6xl font-bold mt-1">
      Hola, soy Alex;
    </h2>
    <LinkList />
  </div>
  <div class="flex flex-col items-center justify-center w-full">
    <AvatarBackground src="src/images/MyPhoto.png" />
    <div class="mt-2 border border-white border-opacity-20 px-4 py-2 inline-flex items-center gap-2 rounded-3xl"> 
      <div class="size-2.5 bg-green-500 rounded-full relative"> 
        <div class="absolute bg-green-500 inset-0 animate-ping rounded-full" /> 
      </div> 
      <p class="text-sm font-medium text-white">
        Disponible
      </p> 
    </div>
    <!-- <WordSphere client:only="react" width={500} height={500}  /> -->
  </div>
</section>
