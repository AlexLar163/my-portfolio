---
import '@fontsource-variable/onest';
import '@fontsource-variable/sora';
import '@fontsource/spicy-rice';
import '@styles/global.css';

---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" />
    <title>Alex Largo - Portfolio</title>
  </head>
  <body class="relative scroll-smooth">
      <div class="radial-lines" />
      <div>
        <main>
          <slot />
        </main>
      </div>
  </body>
</html>

<style>
  body {
    font-family: "Onest Variable", "Sora Variable", "Spicy Rice", sans-serif;
    background-color: hsl(223 16% 5%);
  }
  
  body::-webkit-scrollbar {
    width: 8px; 
  }

  body::-webkit-scrollbar-thumb {
    background-color: #fb923c7b;
    border-radius: 20px;
  }

  main::before {
    --accent-hue: 30;
    --accent-saturation: 75%;
    --accent-lightness: 55%;
    --background: 223 16% 5%;
    --accent: var(--accent-hue) var(--accent-saturation) var(--accent-lightness);
    --gradient-background: radial-gradient(ellipse 60% 70% at 50% 0%, hsl(var(--accent) / .15), hsl(var(--background) / 0));

    position: absolute;
    content: "";
    top: 0;
    width: 100%;
    height: 100vh;
    z-index: -90;
    background-image: var(--gradient-background);
    background-repeat: no-repeat;
    overflow-x: hidden;
  }
  .radial-lines {
    --bg-height: 100vh;
    --bg-size: 12px;
    --foreground: 30 75% 55%; 
    
    position: absolute;
    height: var(--bg-height);
    pointer-events: none;
    inset-inline: 0;
    top: 0;
    z-index: 1;
    background-size: var(--bg-size) var(--bg-size);
    background-image: linear-gradient(to right, hsl(var(--foreground) / 4%) 1px, transparent 1px), linear-gradient(hsl(var(--foreground) / 4%) 1px, transparent 1px);
    -webkit-mask-image: radial-gradient(ellipse 100% 100% at 50% 0%, #000 30%, transparent 100%);
    mask-image: radial-gradient(ellipse 100% 100% at 50% 0%, #000 30%, transparent 100%);
  }
</style>